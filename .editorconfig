root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
end_of_line = lf
indent_size = 4

[*.{cmd, bat}]
end_of_line = crlf

[*.py]
indent_size = 4

[*.{js,cjs,ts,json}]
indent_size = 2

[*.{htm,html,xhtml}]
indent_size = 2

[*.{vue,jsx,tsx}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.md]
indent_size = 2

[*.{css,sass,scss,less}]
indent_size = 2
